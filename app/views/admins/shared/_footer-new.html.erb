<style>
    .landing {
        width: 100%;
        height: 100%;
        background-size: cover;
    }

    .logo img, .page-loader-decoration img  {
        width: 48px;
        height: 48px;
    }
    .header .header-brand .logo {
        margin-left: 22px!important;
    }

    .secondary, .checkbox-wrap input[type=checkbox]:checked+.checkbox-box, .checkbox-wrap input[type=radio]:checked+.checkbox-box, .primary{ background-color: #804aff!important; }
    input[type=password]:focus, input[type=text]:focus, select:focus, textarea:focus {
        border-color: #804aff!important;
    }

    .menu .menu-item.active .menu-item-link, .menu .menu-item.active .menu-item-link:hover,
    .header {
        background-color: #804aff!important;
    }

    .sidebar.navigation-widget.closed {
        padding-top: 0px!important;
    }


    .content-grid {
        width:100%!important;
        padding:115px 25px 0px 105px!important;
    }

    @media screen and (max-width: 1500px){
        .content-grid {
            width:99%!important;
        }
    }

    .grid.grid-3-3-3, .grid.grid-3-3-3-3 {
        grid-template-columns: repeat(auto-fit,240px)!important;
    }

</style>

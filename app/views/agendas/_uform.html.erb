  <div>
    <%= form.label :horafim, style: "display: block" %>
    <%thf = @evento.horafim %>
    <%= form.time_field :horafim, value:thf.strftime('%H:%M') %>
  </div>  

   <div>
    <%= form.label :link, style: "display: block" %>

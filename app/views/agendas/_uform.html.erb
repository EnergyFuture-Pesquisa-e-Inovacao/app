    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name , value:@evento.name %>
  </div>

  <div>
    <%= form.label :descricao, style: "display: block" %>
    <%= form.text_area :descricao , value:@evento.descricao %>

<%= render "shared/header-new",title:"O hub de inovação do setor elétrico"%>
  <!-- CONTENT GRID -->
  <div class="content-grid">

  <!-- SECTION BANNER -->
        <div class="section-banner">
            <%= image_tag('/assets/banner/groups-icon.png',class:"section-banner-icon",alt:"groups-icon") %>
            <!-- SECTION BANNER TITLE -->
            <p class="section-banner-title">Programas Setoriais</p>
            <!-- /SECTION BANNER TITLE -->
    
            <!-- SECTION BANNER TEXT -->
            <p class="section-banner-text">Confira os Programas que movimenta o setor</p>
            <!-- /SECTION BANNER TEXT -->
        </div></br>
         <!-- /SECTION BANNER -->
          <%icp=Icp.find(current_user.icp_id)%>
          <%plano=Plano.find(current_user.plano_id)%>    

    <!-- GRID -->
    <div class="grid grid-3-3-3-3 centered">
     <% @programasetorials.each do |programasetorial| %>
     <%agenda=Agenda.where(tipoevento: "Programa Setorial",idevento:programasetorial.id)%>
      <!-- USER PREVIEW -->
      <div class="user-preview">
        <!-- USER PREVIEW COVER -->
        <figure class="user-preview-cover liquid">
          <%= image_tag("/assets/cover/29.jpg", alt: "cover-40") %>
        </figure>
        <!-- /USER PREVIEW COVER -->
    
        <!-- USER PREVIEW INFO -->
        <div class="user-preview-info">

    
          <!-- USER SHORT DESCRIPTION -->
          <div class="user-short-description">
            <!-- USER SHORT DESCRIPTION AVATAR -->

      
            <!-- USER SHORT DESCRIPTION TITLE -->
            <p class="user-short-description-title"><a href="group-timeline.html"><%= programasetorial.name %></a></p>
            <!-- /USER SHORT DESCRIPTION TITLE -->
      
            <!-- USER SHORT DESCRIPTION TEXT -->
            <p class="user-short-description-text">Ano: <%= programasetorial.ano %></p>
            <!-- /USER SHORT DESCRIPTION TEXT -->
          </div>
          <!-- /USER SHORT DESCRIPTION -->
    
          <!-- USER STATS -->
          <div class="user-stats">
            <!-- USER STAT -->
            <div class="user-stat">
              <!-- USER STAT TITLE -->
              <p class="user-stat-title"><%=programasetorial.quantempresas%></p>
              <!-- /USER STAT TITLE -->
      
              <!-- USER STAT TEXT -->
              <p class="user-stat-text">Empresas</p>
              <!-- /USER STAT TEXT -->
            </div>
            <!-- /USER STAT -->
      
            <!-- USER STAT -->
            <div class="user-stat">
              <!-- USER STAT TITLE -->
              <p class="user-stat-title"><%=programasetorial.quantengajamento%></p>
              <!-- /USER STAT TITLE -->
      
              <!-- USER STAT TEXT -->
              <p class="user-stat-text">Engajam.</p>
              <!-- /USER STAT TEXT -->
            </div>
            <!-- /USER STAT -->
      
            <!-- USER STAT -->
            <div class="user-stat">
              <!-- USER STAT TITLE -->
              <p class="user-stat-title"><%=programasetorial.quantinscricoes%></p>
              <!-- /USER STAT TITLE -->
      
              <!-- USER STAT TEXT -->
              <p class="user-stat-text">Inscritos</p>
              <!-- /USER STAT TEXT -->
            </div>
            <!-- /USER STAT -->
          </div>
          <!-- /USER STATS -->
    
          <!-- USER AVATAR LIST -->
          <div class="user-avatar-list medium reverse centered">
            <!-- USER AVATAR -->
            <div class="user-avatar smaller no-stats">
              <!-- USER AVATAR BORDER -->
              <div class="user-avatar-border">
                <!-- HEXAGON -->
                <div class="hexagon-34-36"></div>
                <!-- /HEXAGON -->
              </div>
              <!-- /USER AVATAR BORDER -->
          
              <!-- USER AVATAR CONTENT -->
              <div class="user-avatar-content">
                <!-- HEXAGON -->
                <div class="hexagon-image-30-32" data-src="img/avatar/03.jpg"></div>
                <!-- /HEXAGON -->
              </div>
              <!-- /USER AVATAR CONTENT -->
            </div>
            <!-- /USER AVATAR -->

          </div>
          <!-- /USER AVATAR LIST -->
          <!-- USER PREVIEW ACTIONS -->
          <div class="user-preview-actions">
            <!-- BUTTON -->
          <%if !(plano.name.eql?"Free") and icp.name.eql?"Empresas de Energia" %>  
          <p class="button white white-tertiary"><%= link_to "Ver o Programa", "/home/profiletimeline?id=#{programasetorial.id}"%></p>
          <%elsif !(plano.name.eql?"Free") and icp.name.eql?"Indústrias e Consultorias" %>  
          <p class="button white white-tertiary"><%= link_to "Ver o Programa", "/home/profiletimeline?id=#{programasetorial.id}"%></p>
          <%elsif plano.name.eql?"Free" %>  
          <p class="button white white-tertiary"><%= link_to "Fale Conosco", "//www.energyfuture.com.br/contato"%></p>
          <%elsif icp.name.eql?"Startups, ICTs e Inovadores" %>  
          <p class="button white white-tertiary"><%= link_to "Fale Conosco", "//www.energyfuture.com.br/contato"%></p>
          <%end%> 
            <!-- /BUTTON -->
          </div>
          <!-- /USER PREVIEW ACTIONS -->
        </div>
        <!-- /USER PREVIEW INFO -->
      </div>
      <!-- /USER PREVIEW -->
      <% end %>
    </div>
    <!-- /GRID -->
  </div>
  <!-- /CONTENT GRID -->

<%= render "shared/footer-new"%>
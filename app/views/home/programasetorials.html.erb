<%= render "shared/header-new",title:"O hub de inovação do setor elétrico"%>
  <!-- CONTENT GRID -->
  <div class="content-grid">

  <!-- SECTION BANNER -->
        <div class="section-banner">
            <%= image_tag("#{Rails.application.credentials.dig(:var, :var_url_remoto)}/img/banner/groups-icon.png",class:"section-banner-icon",alt:"groups-icon") %>
            <!-- SECTION BANNER TITLE -->
            <p class="section-banner-title">Programas Setoriais</p>
            <!-- /SECTION BANNER TITLE -->
    
            <!-- SECTION BANNER TEXT -->
            <p class="section-banner-text">Confira os Programas que movimenta o setor</p>
            <!-- /SECTION BANNER TEXT -->
        </div></br>
         <!-- /SECTION BANNER -->
         <%if current_user.icp_id.present?%> 
           <%icp=Icp.find(current_user.icp_id)%>
         <%end%>  
          <%if current_user.plano_id.present?%>
           <%plano=Plano.find(current_user.plano_id)%> 
          <%end%>    

    <!-- GRID -->
    <div class="grid grid-3-3-3-3 centered">
     <% @programasetorials.each do |programasetorial| %>
  <!-- EVENT PREVIEW -->
                <div class="event-preview">
                          <% if  programasetorial.main_imagepg.attached? %>
                            <figure class="event-preview-cover liquid">
                             <%= image_tag(programasetorial.main_imagepg) %>
                            </figure>
                         <% end %>  
                    <div class="event-preview-info">
                        <div class="event-preview-info-top">
                          <p class="event-preview-text"><span class="bold"><%=programasetorial.ano%></span></p> 
                          <p class="event-preview-text"><%= programasetorial.name %></p>
                          <p class="event-preview-text"><%="Empresas: "+programasetorial.quantempresas%></p>
                          <p class="event-preview-text"><%="Engajamento: "+programasetorial.quantengajamento%></p>
                          <p class="event-preview-text"><%="Inscritos: "+programasetorial.quantinscricoes%></p>
                           <% if programasetorial.descricaocurta.present?%>
                           <p class="event-preview-text"><%= programasetorial.descricaocurta.slice! 0, 80  %></p>
                           <% end %>
               
                        </div>
                        </div>
                        <%if (current_user.icp_id.present?)and(current_user.plano_id.present?)%>
                         <div class="event-preview-info-bottom">
                          <!-- BUTTON -->
                          <%if !(plano.name.eql?"Free") and icp.name.eql?"Empresas de Energia" %>  
                           <p class="button white white-tertiary"><%= link_to "Ver o Programa", "/home/profiletimeline?id=#{programasetorial.id}"%></p>
                          <%elsif !(plano.name.eql?"Free") and icp.name.eql?"Indústrias e Consultorias" %>  
                           <p class="button white white-tertiary"><%= link_to "Ver o Programa", "/home/profiletimeline?id=#{programasetorial.id}"%></p>
                          <%elsif plano.name.eql?"Free" %>  
                           <p class="button white white-tertiary"><%= link_to "Receber Informações do Programa", "/home/ctaprogramasetorial1?id=#{programasetorial.id}"%></p>
                          <%elsif icp.name.eql?"Startups, ICTs e Inovadores" %>  
                           <p class="button white white-tertiary"><%= link_to "Receber Informações do Programa", "/home/ctaprogramasetorial1?id=#{programasetorial.id}"%></p>
                          <%end%> 
                           <!-- /BUTTON -->
                          </div>
                         </br>
                        <%end%> 
                </div>
        <% end %>
        <!-- /EVENT PREVIEW -->
     
    </div>
    <!-- /GRID -->
  </div>
  <!-- /CONTENT GRID -->

<%= render "shared/footer-new"%>
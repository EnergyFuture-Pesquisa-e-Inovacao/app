<%= render "shared/aheader-new"%>

<!-- CONTENT GRID -->
<div class="content-grid">
    <!-- SECTION BANNER -->
    <div class="section-banner">
        <%= image_tag('https://hub.energyfuture.com.br/img/banner/overview-icon.png', alt: "overview-icon",class:"section-banner-icon") %>

        <!-- SECTION BANNER TITLE -->
        <p class="section-banner-title">Programas Setoriais</p>
        <!-- /SECTION BANNER TITLE -->

        <!-- SECTION BANNER TEXT -->
        <p class="section-banner-text">Confira os Programas que movimentam o setor </p>
        <!-- /SECTION BANNER TEXT -->
    </div>
    <!-- /SECTION BANNER -->

            <div class="section-header">
                <!-- SECTION HEADER INFO -->
                <div class="section-header-info">
                    <!-- SECTION PRETITLE -->
                    <p class="section-pretitle"><%= link_to "Home", "/homea/index" %> </p>
                    <p class="section-pretitle"><%= link_to "Novo Programa Setorial", "/programasetorials/new" %> </p>
                    
                    <p class="section-pretitle">Veja o que vem a seguir!</p>
                    <!-- /SECTION PRETITLE -->

                    <!-- SECTION TITLE -->
                    <h2 class="section-title">Pr√≥ximos Programas</h2>
                    <!-- /SECTION TITLE -->
                    
                </div>
                <!-- /SECTION HEADER INFO -->
                 
            </div>

            <div class="grid grid-3-3-3-3 centered">
              <% @programasetorials.each do |programasetorial| %>
                <!-- EVENT PREVIEW -->
                <div class="event-preview">
                    <figure class="event-preview-cover liquid" style="background: url(&quot;/assets/cover/40.jpg&quot;) center center / cover no-repeat;">
                        <%= image_tag(programasetorial.fotomaior, alt: "cover-40") %>
                    </figure>
                    <div class="event-preview-info">
                        <div class="event-preview-info-top">
                          <p class="event-preview-title popup-event-information-trigger"><%= programasetorial.name %></p>
                          <p class="event-preview-text"><%= programasetorial.descricao %></p>

                        </div>
                        <div class="event-preview-info-bottom">
                            <!-- /DECORATED TEXT -->

                            <!-- META LINE -->
                            <%="Status: " + programasetorial.status%>
                            <p class="button white white-tertiary"><%= link_to "Show Este Programa", programasetorial %></p>
                        </div>
                    </div>
                </div>
                <% end %>
                <!-- /EVENT PREVIEW -->

            </div>
 </div>
<%= render "shared/footer-new"%>

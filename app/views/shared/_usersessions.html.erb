<div class="form-box login-register-form-element">
        <!-- FORM BOX DECORATION -->
        <%= image_tag("#{Rails.application.credentials.dig(:var, :var_url_remoto)}/img/landing/rocket.png", alt: "rocket", class:"form-box-decoration overflowing") %>
        <!-- /FORM BOX DECORATION -->

        <!-- FORM BOX TITLE -->
        <h2 class="form-box-title">Sua conta no Energy Future</h2>
        <!-- /FORM BOX TITLE -->
    
        <!-- FORM -->
        <%= form_for(:user, :url => session_path(:user), html: { class: "form" }) do |f| %>
          <!-- FORM ROW -->
          <div class="form-row">
            <!-- FORM ITEM -->
            <div class="form-item">
              <!-- FORM INPUT -->
              <div class="form-input small">
                <label for="email">E-mail</label>
                <%= f.text_field :email, autofocus: true, autocomplete: "email", id:"login-email"  %>
              </div>
              <!-- /FORM INPUT -->
            </div>
            <!-- /FORM ITEM -->
          </div>
          <!-- /FORM ROW -->
    
          <!-- FORM ROW -->
          <div class="form-row">
            <!-- FORM ITEM -->
            <div class="form-item">
              <!-- FORM INPUT -->
              <div class="form-input small">
                <label for="login-password">Senha</label>
                <%= f.password_field :password, autocomplete: "current-password", class:"form-control",id:"login-password" %>
              </div>
              <!-- /FORM INPUT -->
            </div>
            <!-- /FORM ITEM -->
          </div>
          <!-- /FORM ROW -->
    
          <!-- FORM ROW -->
          <div class="form-row space-between">
            <!-- FORM ITEM -->
            <div class="form-item">
              <!-- CHECKBOX WRAP -->
              <div class="checkbox-wrap">
                <input type="checkbox" id="login-remember" name="login_remember" checked>
                <!-- CHECKBOX BOX -->
                <div class="checkbox-box">
                  <!-- ICON CROSS -->
                  <svg class="icon-cross">
                    <use xlink:href="#svg-cross"></use>
                  </svg>
                  <!-- /ICON CROSS -->
                </div>
                <!-- /CHECKBOX BOX -->
                <label for="login-remember">Continuar conectado</label>
              </div>
              <!-- /CHECKBOX WRAP -->
            </div>
            <!-- /FORM ITEM -->
    
            <!-- FORM ITEM -->
            <div class="form-item">
              <!-- FORM LINK -->
              <a class="form-link" href="#">Esqueci minha senha</a>
              <!-- /FORM LINK -->
            </div>
            <!-- /FORM ITEM -->
          </div>
          <!-- /FORM ROW -->
    
          <!-- FORM ROW -->
          <div class="form-row">
            <!-- FORM ITEM -->
            <div class="form-item">
              <!-- BUTTON -->
              <%= f.submit 'Acessar minha conta!', name:"acessar",class:"button full secondary"%>
              <!-- /BUTTON -->
            </div>
            <!-- /FORM ITEM -->
          </div>
          <!-- /FORM ROW -->
         <%end%>
        <!-- /FORM -->

        <!-- LINED TEXT -->
        <p class="lined-text"></p>
        <!-- /LINED TEXT -->

        <!-- SOCIAL LINKS -->
        <div class="social-links">

</div>
        <!-- /SOCIAL LINKS -->
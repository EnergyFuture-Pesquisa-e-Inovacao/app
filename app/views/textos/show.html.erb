<!-- Textos Details Showing -->
<div class="container">
  <div class="flex-column set-center">
    <h3 class="text-center">Detalhes Textos</h3>
    <% if notice.present? %>
      <h4><id="notice"><%= notice %></h4>
    <% end %>
    <div class="d-flex flex-column align-items-center">
      <div class="card text-center" style="width: 30rem;">
        <div class="card-body">
          <h4 class="card-title"><%= @texto.title %> </h4>
          <hr>
          <p class="card-text"> <strong>Status : </strong> <%= @texto.status %> </p>
          <p class="card-text"> <strong>Conteúdo : </strong> <%= @texto.conteudo %> </p>
        </div>
      </div>
      <div class="d-flex">
        <%= button_to "Editar" , edit_texto_path, method: :get ,class:"btn-success border-0 rounded-pill shadow p-2 m-2" %> &nbsp; &nbsp;
        <%if current_admin.present? %> 
          <%= button_to "Apagar", texto_path, method: :delete, form_class: "delete-alertbox" ,class:"btn-danger border-0 rounded-pill shadow p-2 m-2" %>&nbsp; &nbsp;
        <%end%>
        <%= button_to "Listar Currículos", textos_path,method: :get ,class:"btn-primary border-0 rounded-pill shadow p-2 m-2" %>&nbsp; &nbsp;
        <%if current_admin.present? %>      
         <%= button_to "Início", "/homea/index",method: :get ,class:"btn-primary border-0 rounded-pill shadow p-2 m-2" %>
        <%end%> 
      </div>
    </div>
  </div>
</div>





